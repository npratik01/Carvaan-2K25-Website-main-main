<style>
  body, h1, h2, h3, p, a, button {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }

  body {
      background-color: #0a192f;
      color: #ccd6f6;
      line-height: 1.6;
      padding: 20px;
  }

  .details-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #112240;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  h1 {
      font-size: 2.5rem;
      color: #64ffda;
      margin-bottom: 20px;
      text-align: center;
  }

  p {
      font-size: 1.1rem;
      margin-bottom: 15px;
  }

  strong {
      color: #64ffda;
  }

  .btn {
      display: inline-block;
      padding: 10px 20px;
      font-size: 1rem;
      color: #0a192f;
      background-color: #64ffda;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
  }

  .btn:hover {
      background-color: #52d1b2;
  }

  .container {
      max-width: calc(100% - 400px); /* 200px margin on both sides */
      margin: 0 auto;
      padding: 20px;
      background-color: #112240;
      border: 2px solid #64ffda; /* Border color matching the theme */
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .buttons {
      display: flex;
      justify-content: center; /* Horizontally center the buttons */
      gap: 20px; /* Adds space between the buttons */
  }

  @media (max-width: 1200px) {
      .container {
          max-width: calc(100% - 200px); /* Reduce margin for smaller screens */
      }
  }

  @media (max-width: 768px) {
      .container {
          max-width: calc(100% - 100px); /* Further reduce margin for tablets */
      }

      h1 {
          font-size: 2rem; /* Adjust heading size for smaller screens */
      }
  }

  @media (max-width: 480px) {
      .container {
          max-width: calc(100% - 40px); /* Minimal margin for mobile devices */
          padding: 15px;
      }

      h1 {
          font-size: 1.8rem; /* Further adjust heading size for mobile */
      }

      p {
          font-size: 1rem; /* Adjust paragraph font size for mobile */
      }
  }
</style>
