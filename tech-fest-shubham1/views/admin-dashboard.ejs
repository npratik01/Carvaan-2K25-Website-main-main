<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Noto+Serif+Hentaigana:wght@200..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>
<style>
    body {
        font-family: "Roboto Condensed", serif;

    }
</style>

<body>

    <!-- Include Header -->
    <%- include('./partials/header')%>

        <div class="container mx-auto p-5">
            <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Committees & Coordinators</h1>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <% const committees=[ { name: "AI Club" , coordinator: "Alice" , coCoordinators: ["Bob", "Charlie" ] },
                    { name: "Cyber Security" , coordinator: "David" , coCoordinators: ["Eve", "Frank" ] }, {
                    name: "Robotics Club" , coordinator: "Grace" , coCoordinators: ["Hank", "Ivy" ] }, {
                    name: "Coding Club" , coordinator: "Jack" , coCoordinators: ["Kate", "Leo" ] }, { name: "IoT Club" ,
                    coordinator: "Mia" , coCoordinators: ["Nick", "Olivia" ] }, { name: "Cloud Computing" ,
                    coordinator: "Peter" , coCoordinators: ["Quinn", "Ryan" ] }, { name: "Game Development" ,
                    coordinator: "Sophia" , coCoordinators: ["Tom", "Uma" ] }, { name: "AI Research" ,
                    coordinator: "Victor" , coCoordinators: ["Walter", "Xander" ] }, { name: "Data Science" ,
                    coordinator: "Yara" , coCoordinators: ["Zane", "Anna" ] }, { name: "Web Development" ,
                    coordinator: "Ben" , coCoordinators: ["Catherine", "Daniel" ] } ]; %>

                    <% committees.forEach(function(committee) { %>
                        <div
                            class="bg-white shadow-lg rounded-lg overflow-hidden transform transition duration-500 hover:scale-105 hover:shadow-2xl p-5">
                            <h2 class="text-xl font-bold text-gray-900">
                                <%= committee.name %>
                            </h2>
                            <p class="text-gray-600 mt-2">Coordinator: <span class="font-semibold">
                                    <%= committee.coordinator %>
                                </span></p>
                            <p class="text-gray-600 mt-1">Co-Coordinators:</p>
                            <ul class="list-disc pl-5 text-gray-700">
                                <% committee.coCoordinators.forEach(function(co) { %>
                                    <li>
                                        <%= co %>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                        <% }); %>
            </div>
        </div>

        <!-- Include Footer -->
        <%- include('partials/footer') %>

</body>

</html>